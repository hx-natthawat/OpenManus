# OpenManus Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Configuration (Required)
# =============================================================================
# Primary LLM settings
LLM_MODEL=claude-3-7-sonnet-20250219
LLM_API_KEY=your_anthropic_api_key_here
LLM_BASE_URL=https://api.anthropic.com/v1/
LLM_MAX_TOKENS=8192
LLM_TEMPERATURE=0.0

# Vision model settings (can be same as primary LLM)
VISION_MODEL=claude-3-7-sonnet-20250219
VISION_API_KEY=your_anthropic_api_key_here
VISION_BASE_URL=https://api.anthropic.com/v1/

# =============================================================================
# Alternative LLM Providers (Uncomment to use)
# =============================================================================
# For OpenAI
# LLM_MODEL=gpt-4o
# LLM_API_KEY=your_openai_api_key_here
# LLM_BASE_URL=https://api.openai.com/v1/

# For Azure OpenAI
# LLM_MODEL=your_deployment_name
# LLM_API_KEY=your_azure_api_key_here
# LLM_BASE_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment
# LLM_API_VERSION=2024-08-01-preview

# For Ollama (local)
# LLM_MODEL=llama3.2
# LLM_API_KEY=ollama
# LLM_BASE_URL=http://ollama:11434/v1

# =============================================================================
# Browser Configuration
# =============================================================================
BROWSER_HEADLESS=true
BROWSER_DISABLE_SECURITY=true

# =============================================================================
# Search Engine Configuration
# =============================================================================
SEARCH_ENGINE=Google
SEARCH_LANG=en
SEARCH_COUNTRY=us

# =============================================================================
# Sandbox Configuration
# =============================================================================
SANDBOX_USE=false
SANDBOX_MEMORY_LIMIT=1g
SANDBOX_CPU_LIMIT=2.0
SANDBOX_TIMEOUT=300

# =============================================================================
# Service Ports
# =============================================================================
MCP_PORT=8000
OLLAMA_PORT=11434
REDIS_PORT=6379
POSTGRES_PORT=5432

# =============================================================================
# Database Configuration (Optional)
# =============================================================================
POSTGRES_DB=openmanus
POSTGRES_USER=openmanus
POSTGRES_PASSWORD=openmanus123
